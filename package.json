{
  "name": "ArwaEduc school-management",
  "version": "1.0.0",
  "description": "ArwaEduc School Management System Backend with Node.js, Express, Prisma, and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "chmod +x node_modules/.bin/prisma && prisma generate && tsc",
    "install-deps": "npm install",
    "build-app": "npm run build",
    "migrate-db": "test -n \"$DATABASE_URL\" && prisma migrate deploy || echo \"Skipping migrations - DATABASE_URL not set\"",
    "start": "npm run install-deps && npm run build-app && npm run migrate-db && node dist/server.js",
    "start:prod": "npm run start",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node dist/seed.js"
  },
  "keywords": [
    "school",
    "management",
    "backend",
    "express",
    "prisma",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.30",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
